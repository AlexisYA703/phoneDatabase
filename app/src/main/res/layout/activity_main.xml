<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_bg"
    tools:context=".main.view.view.MainActivity">

    <ImageView
        android:id="@+id/business_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/phone_database"
        style="@style/ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_database"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_logo" />

    <ImageView
        android:id="@+id/apple_logo"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        android:background="@drawable/motorola_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/samsung_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_database" />

    <ImageView
        android:id="@+id/samsung_logo"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        android:background="@drawable/apple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_database" />

    <ImageView
        android:id="@+id/motorola_logo"
        android:layout_width="100dp"
        android:layout_height="240dp"
        android:layout_margin="24dp"
        android:background="@drawable/samsung_logo"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/samsung_logo"
        app:layout_constraintTop_toBottomOf="@+id/phone_database" />

</androidx.constraintlayout.widget.ConstraintLayout>